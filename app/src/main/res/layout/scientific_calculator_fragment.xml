<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <TextView
        android:id="@+id/expressionViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="bottom|right"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:scrollHorizontally="true"
        android:textSize="44sp"
        android:text="0"/>

    <TextView
        android:id="@+id/resultViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0.0"
        android:textSize="28sp"
        android:textColor="#000000"/>

    <android.support.v4.widget.SlidingPaneLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layoutDirection="rtl">

        <GridLayout
            android:id="@+id/scientific_first_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@color/background_light"
            android:backgroundTint="@color/background"
            android:columnCount="4"
            android:rowCount="5"
            android:layoutDirection="ltr">

            <GridLayout
                android:id="@+id/memory_buttons"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_columnSpan="4"
                android:background="@color/background_dark">

                <Button
                    android:id="@+id/memory_recall"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="mr"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/memory_add"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="m+"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/memory_substract"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="m-"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/memory_clear"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="mc"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textColor="@color/white"/>
            </GridLayout>

            <Button
                android:id="@+id/asin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="asin"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/acos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="acos"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/atan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="atan"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/ln"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="ln"
                android:typeface="sans"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/sinh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="sinh"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/cosh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="cosh"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/tanh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="tanh"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/e_power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/e_power"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/abs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="abs"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/mod"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="mod"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/rad"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="rad"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/deg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
