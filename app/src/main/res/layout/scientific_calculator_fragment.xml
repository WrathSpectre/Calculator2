            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_light"
            android:layoutDirection="ltr"
            android:columnCount="5"
            android:rowCount="4">

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:layout_columnSpan="5"
                android:background="@color/background_dark"
                android:columnCount="5"
                android:rowCount="3">

                <Button
                    android:id="@+id/sin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="sin"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/cos"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="cos"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/tan"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="tan"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/log"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="log10"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>


                <Button
                    android:id="@+id/factorial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="!"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/power"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/power"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/square_power"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/square"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/cube_power"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/cube"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/square_root"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/square_root"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/cube_root"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/cube_root"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/pi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/pi_sign"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/euler"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="e"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/left_prentesis"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="("
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/right_prentesis"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text=")"
                    android:typeface="sans"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/by_one"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:typeface="sans"
                    android:textColor="@color/white"/>

            </GridLayout>

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="7"
                android:typeface="sans"
                android:textSize="26sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="8"
                android:typeface="sans"
                android:textSize="26sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
