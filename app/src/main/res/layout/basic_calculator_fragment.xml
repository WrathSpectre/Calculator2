<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/expressionViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="bottom|right"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:scrollHorizontally="true"
        android:textSize="44sp"
        android:text="0"/>

    <TextView
        android:id="@+id/resultViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0.0"
        android:textSize="28sp"
        android:textColor="#000000"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/background_light"
        android:columnCount="4"
        android:rowCount="9">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="4"
            android:layout_rowSpan="1"
            android:background="@color/background_dark"
            android:rowCount="1"
            android:columnCount="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="MC"
                android:typeface="sans"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="M+"
                android:typeface="sans"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="M-"
                android:typeface="sans"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="MR"
                android:typeface="sans"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </GridLayout>

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="7"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="8"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="8"
            android:columnCount="1"
            android:rowCount="5"
            android:background="@color/background">

            <ImageButton
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_rowSpan="4"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/backspace_icon"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/multiply_sign"
                android:textSize="26sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/divide_sign"
                android:textSize="26sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/substract"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="-"
                android:textSize="26sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="?attr/selectableItemBackground"
                android:text="+"
                android:textSize="26sp"
                android:textColor="@color/white"/>

        </GridLayout>

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="4"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="5"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="6"
            android:textSize="24sp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="1"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="2"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="3"
            android:textSize="24sp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/comma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="."
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="?attr/selectableItemBackground"
            android:text="0"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:background="@color/colorPrimary"
            android:text="="
            android:textSize="28sp"
            android:textColor="@color/white"/>

    </GridLayout>
</LinearLayout>